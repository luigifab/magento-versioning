<layout version="0.1.0">
	<default>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/luigifab/versioning/styles.css</name>
				<params>media="screen, projection"</params>
			</action>
			<action method="addItem">
				<type>skin_js</type>
				<name>js/luigifab/versioning/app.js</name>
			</action>
		</reference>
	</default>
	<versioning_repository_index>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Versioning / Tools / Magento Admin</title>
			</action>
		</reference>
		<reference name="content">
			<block type="versioning/adminhtml_repository" name="versioning_repository" />
		</reference>
	</versioning_repository_index>
	<versioning_repository_history>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Versioning / Tools / Magento Admin</title>
			</action>
		</reference>
		<reference name="content">
			<block type="versioning/adminhtml_history" name="versioning_history" />
		</reference>
	</versioning_repository_history>
	<versioning_repository_lastlog>
		<reference name="head">
			<action method="setTitle" translate="title">
				<title>Versioning / Tools / Magento Admin</title>
			</action>
		</reference>
		<reference name="content">
			<block type="versioning/adminhtml_lastlog" name="versioning_lastlog" />
		</reference>
	</versioning_repository_lastlog>
</layout>